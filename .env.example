# Application
NODE_ENV=development
PORT=3000
APP_NAME=PBX-X
APP_VERSION=1.0.0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=pbx_user
DB_PASSWORD=pbx_password
DB_DATABASE=pbx_x
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=change-me-in-production-super-secret-key
JWT_EXPIRES_IN=3600
JWT_REFRESH_SECRET=change-me-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=604800

# SIP
SIP_HOST=0.0.0.0
SIP_PORT=5060
SIP_PUBLIC_IP=auto
SIP_WSS_PORT=5061
DRACHTIO_HOST=localhost
DRACHTIO_PORT=9022
DRACHTIO_SECRET=cymru

# RTP
RTP_PORT_MIN=10000
RTP_PORT_MAX=20000

# WebRTC/Mediasoup
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=auto
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=49999

# Storage (MinIO/S3)
STORAGE_TYPE=minio
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=pbx-x
STORAGE_USE_SSL=false
STORAGE_REGION=us-east-1

# SMTP
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@pbx-x.example.com

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/pbx-x

# Features
RECORDING_ENABLED=true
CRM_INTEGRATION_ENABLED=true
CONFERENCE_ENABLED=true
